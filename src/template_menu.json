[
    {
        "caption": "PuTTY",
        "mnemonic": "u",
        "id": "putty",

        "PuTTY_launch_button": [
            // Optionally, you can add an option to run PuTTY without connecting to a specific server.
            // Toggle the "PuTTY_launch_button" setting to achieve this.
            {
                "caption": "Open PuTTY",
                "command": "quickputty_open",
                "mnemonic": "O"
            },
            { "caption": "-" },
        ],

        "children": [
            {
                "caption": "New session/folder",
                "command": "quickputty_new",
                "mnemonic": "N"
            },
            {
                "caption": "Manage sessions",
                "command": "open_file",
                "args": {"file": "${packages}/User/QuickPuTTY/sessions.json"},
                "mnemonic": "M"
            },
            {
                "caption": "Remove session/folder",
                "command": "quickputty_remove",
                "mnemonic": "R"
            },
            { "caption": "-" }
        ]
    }
]
